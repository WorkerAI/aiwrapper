{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "outDir": "js_build",
    "rootDir": "node_source",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["node_source/**/*.ts", "node_source/**/*.js"],
  "exclude": ["node_modules", "**/*.test.ts"]
}