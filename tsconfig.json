  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "outDir": "js_build",
    "rootDir": "temp_node_source",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true
